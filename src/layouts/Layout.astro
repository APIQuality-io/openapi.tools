---
import { SEO } from 'astro-seo';

import Container from '../components/Container';
import PostHog from '../components/PostHog.astro';

interface Props {
  title: string;
}
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta http-equiv="content-type" content="text/html; charset=UTF-8" />
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <meta
      name="description"
      content="OpenAPI.tools is a comprehensive and open source list of resources for developers working with OpenAPI."
    />
    <meta name="author" content="APIs You Won't Hate" />
    <link rel="canonical" href="https://openapi.tools" />
    <title>
      OpenAPI.Tools - an Open Source list of great tools for OpenAPI.
    </title>

    <link rel="apple-touch-icon" sizes="57x57" href="/apple-icon-57x57.png" />
    <link rel="apple-touch-icon" sizes="60x60" href="/apple-icon-60x60.png" />
    <link rel="apple-touch-icon" sizes="72x72" href="/apple-icon-72x72.png" />
    <link rel="apple-touch-icon" sizes="76x76" href="/apple-icon-76x76.png" />
    <link
      rel="apple-touch-icon"
      sizes="114x114"
      href="/apple-icon-114x114.png"
    />
    <link
      rel="apple-touch-icon"
      sizes="120x120"
      href="/apple-icon-120x120.png"
    />
    <link
      rel="apple-touch-icon"
      sizes="144x144"
      href="/apple-icon-144x144.png"
    />
    <link
      rel="apple-touch-icon"
      sizes="152x152"
      href="/apple-icon-152x152.png"
    />
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/apple-icon-180x180.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="192x192"
      href="/android-icon-192x192.png"
    />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="96x96" href="/favicon-96x96.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/manifest.json" />
    <meta name="msapplication-TileColor" content="#ffffff" />
    <meta name="msapplication-TileImage" content="/ms-icon-144x144.png" />
    <meta name="theme-color" content="#ffffff" />

    <link
      href="https://fonts.googleapis.com/css?family=Arvo:700|Open+Sans:400,700"
      rel="stylesheet"
      type="text/css"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css"
    />

    <SEO
      titleTemplate="%s | OpenApi.tools, from APIs You Won't Hate"
      description="A comprehensive and open source list of resources for developers working with OpenAPI."
      openGraph={{
        basic: {
          title: 'OpenAPI.tools',
          type: 'website',
          image:
            'https://user-images.githubusercontent.com/5182256/131216951-8f74f425-f775-463d-a11b-0e01ad9fce8d.png',
        },
      }}
      twitter={{
        creator: '@irreverentmike',
        site: '@apisyouwonthate',
      }}
    />
    <script src="https://cdn.usefathom.com/script.js" data-site="MKNBSINY" defer
    ></script>
    <PostHog />
  </head>

  <body>
    <slot />
    <footer
      class="my-20 min-h-[400px] gap-4 bg-gray-700 px-8 py-20 text-xl text-white"
    >
      <Container>
        &copy; {new Date().getFullYear()} &nbsp;
        <a href="https://apisyouwonthate.com" target="_blank"
          >APIs You Won't Hate</a
        >. All rights reserved.
      </Container>

      <Container>
        <div class="flex space-x-4">
          <a
            rel="me"
            href="https://twitter.com/apisyouwonthate"
            class="text-white"
          >
            <i class="fa fa-twitter"></i>
          </a>
          <a
            target="_blank"
            rel="me"
            href="https://github.com/apisyouwonthate/openapi.tools"
            class="text-white"
          >
            <i class="fa fa-github"></i>
          </a>

          <a
            target="_blank"
            rel="me"
            href="https://www.linkedin.com/company/apisyouwonthate"
          >
            <i class="fa fa-linkedin"></i>
          </a>

          <a
            target="_blank"
            rel="me"
            href="https://www.youtube.com/channel/UCF7gjKbU2Rj8n8uXzr2c5Gg"
            class="text-white"
          >
            <i class="fa fa-youtube"></i>
          </a>
        </div>
        <div class="flex flex-col gap-2">
          <a href="https://apisyouwonthate.com/podcast" class="text-white">
            <i class="fa fa-microphone"></i> APIs You Won't Hate (the podcast)
          </a>

          <a
            target="_blank"
            href="https://apisyouwonthate.com/newsletter"
            class="text-white"
          >
            <i class="fa fa-envelope"></i> APIs You Won't Hate (the newsletter)
          </a>
        </div>
      </Container>
    </footer>
  </body>
</html>
